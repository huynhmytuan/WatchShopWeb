@model WatchShop.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa";
}
<div class="center-page">
    <h2 class="center-page" style="text-align:center"><b>CHỈNH SỬA SẢN PHẨM </b></h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="table" style="padding:4px,50px,4px,50px">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <h5>Tên sản phẩm</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Đơn vị</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UnitBrief, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UnitBrief, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Đơn giá</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UnitPrice, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Hình ảnh</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Thời gian nhập</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Sản phầm có sẵn</h5>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Available)
                        @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <h5>Mô tả</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Loại sản phẩm</h5>
                <div class="col-md-10">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Hãng</h5>
                <div class="col-md-10">
                    @Html.DropDownList("SupplierId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SupplierId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Số lượng</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Giảm giá</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5>Sản phẩm đặc biệt</h5>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Special)
                        @Html.ValidationMessageFor(model => model.Special, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <h5>Sản phẩm mới</h5>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Latest)
                        @Html.ValidationMessageFor(model => model.Latest, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <input type="submit" value="Lưu" class="btn hvr-hover" />
                    </div>
                    <div class="col-md-offset-5 col-md-6">
                        @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn hvr-hover" })
                    </div>
                </div>
                
            </div>
            
        </div>
    }
    
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
